
<div class="user-header"> Welcome to the Tower of Courage, {{name}}!</div>


{{#if playerchars.length}}
  <div class="Characters"> Please the character you would like to use.
      {{#each playerchars as |playerchar|}}
    <div class="playerchar">
        <a href="#" onclick="Game.gameStart(`{{playerchar.classType}}`)">
            <img class="char-img" src="/images/heroes/{{playerchar.classType}}_idle.png" alt="{{playerchar.classType}}" style="transform: scale(2)">
            <div>
                <h2>{{playerchar.character_name}}</h2>
                <h3>{{playerchar.classType}}</h3>
                <p>{{playerchar.classDesc}}</p>
            </div>
        </a>
      </div>
    {{/each}}
    </div>
    <div class="actions"></div>
    <div class="arena"></div>
    <div class="enemy"></div>
{{/if}}


